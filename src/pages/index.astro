---
import Layout from '../layouts/Layout.astro';
import AddExpenseForm from '../components/AddExpenseForm.svelte';
import ExpenseChart from '../components/ExpenseChart.svelte';
import ExpenseList from '../components/ExpenseList.svelte';
import Notification from '../components/Notification.svelte';
import AnnualSummary from '../components/AnnualSummary.svelte';
---

<Layout title="Seguimiento de Gastos">
	<main class="text-gray-800">
		<div class="container mx-auto p-4 sm:p-6 lg:p-8">
			<div class="text-center mb-12">
				<h1 class="text-4xl md:text-5xl font-bold">Seguimiento de Gastos</h1>
				<p class="text-lg text-gray-600 mt-2">Una forma sencilla de llevar un control de tus finanzas personales.</p>
			</div>

			<!-- Add Expense Form -->
			<div class="mb-8 max-w-lg mx-auto">
				<h2 class="text-xl font-bold text-gray-800 mb-4">Agregar Nuevo Gasto</h2>
				<AddExpenseForm client:load />
			</div>

			<!-- Summaries Section -->
			<div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
				<AnnualSummary client:load />
				<ExpenseChart client:load />
			</div>

			<!-- Expense List Section -->
			<div class="mt-12">
				<ExpenseList client:load />
			</div>
		</div>
		<Notification client:load />
	</main>
</Layout>
